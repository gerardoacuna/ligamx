<%= link_to 'New Schedule', new_admin_schedule_path, class: 'button right' %>

<h1>Schedules</h1>
<table class="twelve">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @schedules.each do |schedule| %>
  <tr>
    <td><%= schedule.name %></td>
    <td><%= link_to 'Show', [:admin, schedule] %></td>
    <td><%= link_to 'Edit', edit_admin_schedule_path(schedule) %></td>
    <td><%= link_to 'Destroy', [:admin, schedule], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>

</table>
