<%= link_to 'New Team', new_admin_team_path, class: 'button right' %>
<h1>Manage Teams</h1>

<table class="twelve">
  <thead>
    <tr>
      <th>Pos.</th>
      <th>Name</th>
      <th>Stocks Available</th>
      <th>Last Match Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.position %></td>
    <td><%= team.name %></td>
    <td><%= team.stocks_available %></td>
    <td><%= team.closest_match_date.to_formatted_s(:long) %></td>
    <td><%= DateTime.now.to_formatted_s(:long) %></td>
    <td><%= team.end_match_date.to_formatted_s(:long) %></td>
    <% unless team.can_buy_stock?(current_user) && team.match_right_now? %>
      <td><span class="success label">Can buy</span></td>
    <% else %>
      <td><span class="alert label">Can't buy</span></td>
    <% end %>
    <% if team.match_right_now? %>
      <td><span class="alert label">Match right now.</span></td>
    <% end %>
    <td><%= link_to 'Show', [:admin, team] %></td>
    <td><%= link_to 'Edit', edit_admin_team_path(team) %></td>
    <td><%= link_to 'Destroy', [:admin, team], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>