<h1><%= @team.name %></h1>

<table class="twelve">
	<thead>
		<tr>
			<td>Pos.</td>
			<td>Pos. Rival</td>
			<td>Fecha</td>
			<td>Resultado</td>
		</tr>
	</thead>
	<tbody>
		<% @team.matches.each do |match| %>
			<tr>
				<td><%= match.position %></td>
				<td><%= match.rival_position %></td>
				<td><%= match.date.to_formatted_s(:long) %></td>
				<td><%= match.result %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<table class="twelve">
	<tbody>
		<% @team.stocks.each do |stock| %>
			<tr>
				<td><%= stock.id %></td>
				<td><%= stock.user.email %></td>
				<td><%= link_to 'Destroy', [:admin, stock], method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'Edit', edit_admin_team_path(@team) %> |
<%= link_to 'Back', admin_teams_path %>
