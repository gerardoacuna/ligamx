<%= link_to 'New User', new_admin_user_path, class: 'button right' %>

<h1>Users</h1>
<h6><%= @users.size %> registered users.</h6>
<table class="twelve">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>SignIn Count</th>
      <th>Current Sign In</th>
      <th>Last Sign In</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.sign_in_count %></td>
    <td><%= user.current_sign_in_at %></td>
    <td><%= user.last_sign_in_at %></td>
    <td><%= link_to 'Show', [:admin, user] %></td>
    <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
    <td><%= link_to 'Destroy', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>

</table>
