<h1>The Market</h1>

<%#= link_to 'New Team', new_team_path, class: 'button' %>

<table class="twelve">
  <thead>
    <tr>
      <th>Pos.</th>
      <th>Name</th>
      <th>Available Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @teams.each do |team| %>
  <tr>
    <td><%= team.position %></td>
    <td><%= team.name %></td>
    <td><%= team.total_stocks_sold %></td>
    <td><%= link_to 'Show', [:admin, team] %></td>
    <td><%= link_to 'Edit', edit_admin_team_path(team) %></td>
    <td><%= link_to 'Destroy', [:admin, team], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
