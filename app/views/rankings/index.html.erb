<h1>Rankings</h1>

<table class="twelve">
	<thead>
		<tr>
			<th>Pos.</th>
			<th>Nombre</th>
			<th>Valor Portafolio</th>
		</tr>
	</thead>
	<tbody>
		<% @players.each_with_index do |player, index| %>
		<tr>
			<td><%= index + 1 %></td>
			<% if player.username.nil? %>
				<td><%= player.email %></td>
			<% else %>
				<td><%= player.username %></td>
			<% end %>
			<td><%= number_to_currency(player.total_portfolio_value, precision: 4) %></td>
		</tr>
		<% end %>
	</tbody>
</table>
