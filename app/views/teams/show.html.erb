<h3><div class="icon <%= @team.name.parameterize %>"></div><%= @team.name %></h3>

<div class="row">
	<div class="five columns">
		<ul class="block-grid two-up">
			<li>
				<div class="panel centered-text">
					<h1><%= number_to_currency(@team.current_value) %></h1>
					<h5>Valor Actual</h5>
				</div>
			</li>
			<li>
				<div class="panel centered-text">
					<h4>Prox.</h4>
					<h5>Record</h5>
				</div>
			</li>
			<li>
				<div class="panel centered-text">
					<h4>Prox.</h4>
					<h5>Record Local</h5>
				</div>
			</li>
			<li>
				<div class="panel centered-text">
					<h4>Prox.</h4>
					<h5>Record Visitante</h5>
				</div>
			</li>
			<li>
				<div class="panel centered-text">
					<h4>Prox.</h4>
					<h5>Goles a Favor</h5>
				</div>
			</li>
			<li>
				<div class="panel centered-text">
					<h4>Prox.</h4>
					<h5>Goles en Contra</h5>
				</div>
			</li>
		</ul>
	</div>
	<div class="seven columns">
		<h4>Compra-Venta</h4>
		<%= content_tag :div, "", id: "perfomance_chart", data: { stocks: team_chart_data } %>
	</div>
</div>

<div class="row">
	<div class="twelve columns">
		<h3>Calendario</h3>
		<table class="twelve">
			<thead>
				<tr>
					<th>Fecha</th>
					<th colspan="2">Local</th>
					<th></th>
					<th colspan="2">Visitante</th>
				</tr>
			</thead>
			<tbody>
				<% Matchup.all_team_matchups(@team.id).each do |match| %>
					<tr>
						<td><%= match.date.to_formatted_s(:long) %></td>
						<td><%= link_to match.team1.name, match.team1 %></td>
						<td><div class="icon <%= match.team1.name.parameterize %>"></div></td>
						<td>vs.</td>
						<td><div class="icon <%= match.team2.name.parameterize %>"></div></td>
						<td><%= link_to match.team2.name, match.team2 %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<script type="text/javascript">
	Morris.Line({
	  element: 'perfomance_chart',
	  data: $('#perfomance_chart').data('stocks'),
	  xkey: 'updated_at',
	  ykeys: ['price'],
	  labels: ['Compra'],
	  smooth: false,
    preUnits: '$'
	});
</script>
		