<h1><%= @team.name %></h1>

<table class="twelve">
	<thead>
		<tr>
			<th>Fecha</th>
			<th colspan="2">Local</th>
			<th></th>
			<th colspan="2">Visitante</th>
		</tr>
	</thead>
	<tbody>
		<% Matchup.all_team_matchups(@team.id).each do |match| %>
			<tr>
				<td><%= match.date.to_formatted_s(:long) %></td>
				<td><%= match.team1.name %></td>
				<td><div class="icon <%= match.team1.name.parameterize %>"></div></td>
				<td>vs.</td>
				<td><div class="icon <%= match.team2.name.parameterize %>"></div></td>
				<td><%= match.team2.name %></td>
			</tr>
		<% end %>
	</tbody>
</table>